<%- contentFor('mainPage') %>

<div class="container">
    <% if (errors.length > 0) { %>
        <div class="alert alert-danger">
            <% for (error of errors) { %>
                <%= error %><br>
            <% } %>
        </div>
    <% } %>

    <% if (noMatch.length > 0) { %>
        <div class="alert alert-danger"><%= noMatch %></div>
    <% } %>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form">

            <form action="/maintenance/Author-Delete" method="POST" class="forms no-display" id="delete-form">

                <fieldset class="form-group">
                    <h3>Delete</h3>
                    <div class="form-group">
                        <label>Author ID Number</label>
                        <input type="number" name="authorid" class="form-control">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg form-delete">Delete</button>
                    </div>
                </fieldset>

            </form> 
        </div>
                    
    </div>
</div>
