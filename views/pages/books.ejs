<%- contentFor('mainPage') %>
<div class="container">
	<div class="jumbotron text-center">
		<% if (input.length == 0 || books.length == 0) { %>
			<div class=row>
				<div class="col-sm-6 col-md-offset-3">
					<p>Your search didn't return any match</p>
					<p>Please try again</p>
					<a href="/"class="btn btn-success goback"><span class="glyphicon glyphicon-hand-left"></span>Go back</a>
				</div>
			</div>
		<% } else { %>
			<h1>Books</h1>
	</div>

		<table class="table table-bordered table-hover table-striped">
			<thead>
				<tr>
					<th>Book Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% for (var book of books) { %>
					<tr>
						<td><%= book.title %></td>
						<td><a href="/books/<%= book.bookCode %>" class="btn btn-sm btn-primary">View</a></td>
					</tr>
				<% } %>
			</tbody>
		</table>
	<% } %>
</div>