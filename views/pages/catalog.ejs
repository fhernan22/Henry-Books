<%- contentFor('mainPage') %>
<div class="container">
	<div class="jumbotron text-center">
		<h1>Catalog</h1>
		<h3>Select a table to view its content</h3>
	</div>

	<table class="table table-bordered table-hover table-striped">
		<thead>
			<tr>
				<th>Table Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for (var table of tables) { %>
				<tr>
					<td><%= table.Tables_in_henrybooks %></td>
					<td><a href="/catalog/<%= table.Tables_in_henrybooks %>" class="btn btn-sm btn-primary">View</a></td>
				</tr>
			<% } %>
		</tbody>
	</table>
</div>
