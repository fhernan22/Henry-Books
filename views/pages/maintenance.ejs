<%- contentFor('mainPage') %>
<div class="container">
	<div class="jumbotron text-center">
		<h1>Maintenance</h1>
		<p>The Table Copy is updated as books are inserted</p>
	</div>

	<table class="table table-bordered table-hover table-striped">
		<thead>
			<tr>
				<th>Tables</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% for (table of desiredTables) { %>
				<tr>
					<td class="col-sm-6"><%= table %></td>
					<td class="col-sm-6">
						<a href="/maintenance/<%= table %>-Insert" class="btn btn-sm btn-primary">Insert</a>
						<a href="/maintenance/<%= table %>-Update" class="btn btn-sm btn-primary">Update</a>
						<a href="/maintenance/<%= table %>-Delete" class="btn btn-sm btn-danger">Delete</a>
					</td>
				</tr>
			<% } %>
		</tbody>
	</table>
</div>